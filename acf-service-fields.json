{
  "key": "group_breezyee_services",
  "title": "Service Details",
  "fields": [
    {
      "key": "field_service_price",
      "label": "Price",
      "name": "price",
      "type": "text",
      "instructions": "e.g., From £350",
      "required": 1,
      "default_value": "From £"
    },
    {
      "key": "field_service_price_detail",
      "label": "Price Details",
      "name": "price_detail",
      "type": "textarea",
      "instructions": "Detailed pricing breakdown",
      "required": 1,
      "rows": 3
    },
    {
      "key": "field_service_features",
      "label": "Features",
      "name": "features",
      "type": "repeater",
      "instructions": "List of service features",
      "required": 1,
      "min": 1,
      "max": 10,
      "layout": "table",
      "button_label": "Add Feature",
      "sub_fields": [
        {
          "key": "field_feature_text",
          "label": "Feature",
          "name": "feature",
          "type": "text",
          "required": 1
        }
      ]
    },
    {
      "key": "field_service_icon",
      "label": "Icon",
      "name": "icon",
      "type": "text",
      "instructions": "Lucide icon name (e.g., Home, Building, Package)",
      "default_value": "Package"
    },
    {
      "key": "field_service_description",
      "label": "Short Description",
      "name": "description",
      "type": "textarea",
      "instructions": "Brief service description for cards",
      "required": 1,
      "rows": 2,
      "maxlength": 200
    }
  ],
  "location": [
    [
      {
        "param": "post_type",
        "operator": "==",
        "value": "service"
      }
    ]
  ]
}
